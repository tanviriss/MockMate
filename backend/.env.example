# MockMate Backend Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# CRITICAL SECURITY NOTICE
# =============================================================================
# 1. Generate a secure JWT_SECRET_KEY: openssl rand -base64 32
# 2. Use strong, unique passwords for database
# 3. Never use localhost URLs in production
# 4. Rotate API keys regularly
# 5. Keep .env file in .gitignore

# =============================================================================
# APPLICATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
# For production, set: ENVIRONMENT=production, DEBUG=false

# =============================================================================
# DATABASE (Supabase PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT_REF].supabase.co:5432/postgres
# Example: postgresql://postgres:SecurePass123@db.abc123xyz.supabase.co:5432/postgres

# =============================================================================
# REDIS (Session Management)
# =============================================================================
# Development: Use local Redis
REDIS_URL=redis://localhost:6379/0

# Production: Use cloud Redis service
# REDIS_URL=redis://default:[PASSWORD]@[HOST]:[PORT]
# Examples:
#   - Upstash: redis://default:xxx@xxx.upstash.io:6379
#   - Redis Cloud: redis://:password@redis-12345.c1.us-east-1-1.ec2.cloud.redislabs.com:12345
#   - Railway: redis://default:password@containers-us-west-1.railway.app:6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# CRITICAL: Generate secure secret with: openssl rand -base64 32
# Must be at least 32 characters! Never use default values!
JWT_SECRET_KEY=REPLACE_THIS_WITH_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AI SERVICES
# =============================================================================
# Google Gemini AI (for resume parsing, question generation, evaluation)
GEMINI_API_KEY=your_gemini_api_key_here
# Get key from: https://makersuite.google.com/app/apikey

# Groq Whisper (for speech-to-text transcription)
GROQ_API_KEY=your_groq_api_key_here
# Get key from: https://console.groq.com/keys

# ElevenLabs (for text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# Get key from: https://elevenlabs.io/app/settings/api-keys

# =============================================================================
# SUPABASE (Auth, Database, Storage)
# =============================================================================
SUPABASE_URL=https://[YOUR_PROJECT_REF].supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
# Get from: https://app.supabase.com/project/[PROJECT]/settings/api

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
# Development
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production (replace with your actual domain)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf

# =============================================================================
# AUDIO SETTINGS
# =============================================================================
MAX_AUDIO_DURATION=300
AUDIO_FORMAT=wav

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
