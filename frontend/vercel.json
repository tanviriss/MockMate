{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "Backend API URL (e.g., https://your-backend.railway.app)",
      "required": true
    },
    "NEXT_PUBLIC_WS_URL": {
      "description": "WebSocket URL (e.g., wss://your-backend.railway.app)",
      "required": true
    },
    "NEXT_PUBLIC_ENVIRONMENT": {
      "value": "production"
    }
  }
}
